<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.d2j_00.daftarharga.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:text="Jual Beli Motor" />

    <Button
        android:id="@+id/tambah"
        android:text="Input Pembelian"
        android:onClick="tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Total Pembelian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="printReceipt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Yang Di Beli"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_trasaksi">
    </ListView>

</LinearLayout>
